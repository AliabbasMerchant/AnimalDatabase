<% include ../layouts/header %>

<div class="container mt-3 text-dark">
    <div class="row">
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
        <div class="col-md-10 col-lg-8 col-xl-6">
            <form action="/areas/edit/<%= name %>" method="POST">
                <div class="heading-2 text-center my-3">EDIT AREA</div>
                <% include ../layouts/messages %>
                <div class="form-group">
                    <label class="required" for="name">Name</label>
                    <div><%= typeof name != 'undefined' ? name : '' %></div>
                </div>
                <div class="form-group">
                    <label class="required" for="boundary">Boundary</label>
                    <input type="text" class="form-control" id="boundary" placeholder="Enter Boundary Points of the Polygon"
                        name="boundary" value="<%= typeof boundary != 'undefined' ? boundary : '' %>">
                </div>
                
                <button type="submit" class="btn btn-outline-dark pl-4 pr-4">Save</button>
            </form>
        </div>
    </div>
</div>

<% include ../layouts/footer %>