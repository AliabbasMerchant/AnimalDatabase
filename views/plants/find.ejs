<% include ../layouts/header %>

<div class="container mt-3 text-dark">
    <div class="row">
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
        <div class="col-md-10 col-lg-8 col-xl-6">
            <form action="/plants/find" method="POST">
                <div class="heading-2 text-center my-3">FIND PLANTS</div>
                <% include ../layouts/messages %>
                <div class="form-group">
                    <label for="number">Number</label>
                    <input type="number" class="form-control" id="number" placeholder="Enter Plant Number"
                        name="number" value="<%= typeof number != 'undefined' ? number : '' %>">
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select class="form-control" id="status" name="status">
                        <option value="Normal">Normal</option>
                        <option value="Endangered">Endangered</option>
                        <option value="Extinct">Extinct</option>
                    </select>
                </div>
                <% if(plant_species.length > 0) { %>
                <div class="form-group">
                    <label for="plant_species">Plant Species</label>
                    <select class="form-control" id="plant_species" name="plant_species">
                        <% plant_species.forEach((species) => { %>
                            <option value="<%= species.plant_species %>"><%= species.plant_species %></option>
                        <% }); %>
                    </select>
                </div>
                <% } %>
                <div class="form-group">
                    <label for="sort">Sort By</label>
                    <select class="form-control" id="sort" name="sort">
                        <option selected="selected" value="number">Number</option>
                        <option value="status">Status</option>
                        <option value="plant_species">Plant Species</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="skip">Number of Results to Skip</label>
                    <input type="number" class="form-control" id="skip" name="skip" value="0">
                </div>
                <div class="form-group">
                    <label for="limit">Number of Results</label>
                    <input type="number" class="form-control" id="limit" name="limit" value="100">
                </div>
                <button type="submit" class="btn btn-outline-dark pl-4 pr-4">Find</button>
            </form>
        </div>
    </div>
</div>

<% include ../layouts/footer %>