<% include ../layouts/header %>

<div class="container mt-3 text-dark">
    <div class="row">
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
        <div class="col-md-10 col-lg-8 col-xl-6">
            <div class="heading-2 text-center my-3">ADD PLANTS</div>
            <% include ../layouts/messages %>
            <div class="form-group">
                <label for="description">Description</label>
                <div><%= typeof plant.description != 'undefined' ? plant.description : '' %></div>
            </div>
            <div class="form-group">
                <label for="number">Number</label>
                <div><%= typeof plant.number != 'undefined' ? plant.number : '' %></div>
            </div>
            <div class="form-group">
                <label for="status">Status</label>
                <div><%= typeof plant.status != 'undefined' ? plant.status : '' %></div>
            </div>
            <div class="form-group">
                <label for="plant_species">Plant Species</label>
                <div><%= typeof plant.plant_species != 'undefined' ? plant.plant_species : '' %></div>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <div><%= typeof plant.location != 'undefined' ? plant.location.x+" "+plant.location.y : '' %></div>
            </div>
            <div class="form-group">
                <label for="area">Area</label>
                <div><%= typeof plant.area != 'undefined' ? plant.area : '' %></div>
            </div>
            <a role="button" class="btn btn-info" href="/plants/edit/<%= plant.plant_id %>">Edit</a>
        </div>
    </div>
</div>

<style>
label {
    font-weight: bold;
}
</style>

<% include ../layouts/footer %>