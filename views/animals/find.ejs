<% include ../layouts/header %>

<div class="container mt-3 text-dark">
    <div class="row">
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
        <div class="col-md-10 col-lg-8 col-xl-6">
            <form action="/animals/find" method="POST">
                <div class="heading-2 text-center my-3">FIND ANIMAL</div>
                <% include ../layouts/messages %>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Name"
                        name="name" value="<%= typeof name != 'undefined' ? name : '' %>">
                </div>
                <div class="form-group">
                    <label for="_order">Status</label>
                    <input type="text" class="form-control" id="status" placeholder="Enter Status"
                        name="status" value="<%= typeof status != 'undefined' ? status : '' %>">
                </div>
                <div class="form-group">
                    <label for="gender">Gender</label>
                    <input type="text" class="form-control" id="gender" placeholder="Enter Gender"
                        name="gender" value="<%= typeof gender != 'undefined' ? gender : '' %>">
                </div>
                <% if(animal_species.length > 0) { %>
                <div class="form-group">
                    <label for="animal_species">Animal Species</label>
                    <select class="form-control" id="animal_species" name="animal_species">
                        <% animal_species.forEach((species) => { %>
                            <option value="<%= species %>"><%= species %></option>
                        <% }); %>
                    </select>
                </div>
                <% } %>
                <div class="form-group">
                    <label for="sort">Sort By</label>
                    <select class="form-control" id="sort" name="sort">
                        <option selected="selected" value="name">Name</option>
                        <option value="status">Status</option>
                        <option value="gender">Gender</option>
                        <option value="animal_species">Animal Species</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="skip">Number of Results to Skip</label>
                    <input type="number" class="form-control" id="skip" name="skip" value="0">
                </div>
                <div class="form-group">
                    <label for="limit">Number of Results</label>
                    <input type="number" class="form-control" id="limit" name="limit" value="100">
                </div>
                <button type="submit" class="btn btn-outline-dark pl-4 pr-4">Find</button>
            </form>
        </div>
    </div>
</div>

<% include ../layouts/footer %> 

