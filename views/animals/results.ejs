<% include ../layouts/header %>

<div class="container">
    <div class="heading-1 text-center mt-3">All Animals</div>
    <% include ../layouts/messages %>
    <table class="table table-bordered table-text-centered table-no-padding mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Status</th>
                <th scope="col">Gender</th>
                <th scope="col">Description</th>
                <th scope="col">Animal Species</th>
            </tr>
        </thead>
        <tbody>
            <% if (result.length > 0) { %>
                <% result.forEach(result => { %>
                    <tr onclick="window.location='/animals/show/<%= result.animal_id %>';">
                        <td ><%= result.name %></td>
                        <td><%= new Date(result.dob).toDateString() %></td>
                        <td><%= result.status %></td>
                        <td><%= result.gender %></td>
                        <td><%= result.description %></td>
                        <td><%= result.animal_species %></td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr> <td colspan="6"> Not found </td> </tr>
            <% } %>
        </tbody>
    </table>
</div>

<% include ../layouts/footer %>