<% include ../layouts/header %>

<div class="container">
    <div class="heading-1 text-center mt-3">All Animals</div>
    <% include ../layouts/messages %>
    <table class="table table-bordered table-text-centered table-no-padding mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Animal ID</th>
                <th scope="col">Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Status</th>
                <th scope="col">Gender</th>
                <th scope="col">Description</th>
                <th scope="col">Photo</th>
                <th scope="col">Animal Species</th>
                <th scope="col">Location</th>
            </tr>
        </thead>
        <% if (results) { %>
        <tbody>
            <% results.forEach(result => { %>
            <tr>
                <td><%= result.animal_id %></td>
                <td><%= result.name %></td>
                <td><%= result.dob %></td>
                <td><%= result.status %></td>
                <td><%= result.gender %></td>
                <td><%= result.description %></td>
                <td><%= result.photo %></td>
                <td><%= result.animal_species %></td>
                <td><%= result.location %></td>
            </tr>
            <% }); %>
        </tbody>
        <% } %>
    </table>
</div>

<% include ../layouts/footer %>