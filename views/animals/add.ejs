<% include ../layouts/header %>

<div class="container mt-3 text-dark">
    <div class="row">
        <div class="col-md-1 col-lg-2 col-xl-3"></div>
        <div class="col-md-10 col-lg-8 col-xl-6">
            <form action="/animals/add" method="POST" enctype="multipart/form-data">
            <!-- FOR FORM WITH PHOTO <form action="/animal_species/add" method="POST" enctype="multipart/form-data"> -->
                <div class="heading-2 text-center my-3">ADD ANIMAL</div>
                <% include ../layouts/messages %>
                <div class="form-group">
                    <label class="required" for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Name"
                        name="name" value="<%= typeof name != 'undefined' ? name : '' %>">
                </div>
                <div class="form-group">
                    <label class="required" for="dob">Date Of Birth</label>
                    <input type="date" class="form-control" id="dob" placeholder="Enter Date Of Birth"
                        name="dob" value="<%= typeof dob != 'undefined' ? dob : '' %>">
                </div>
                <div class="form-group">
                    <label for="_order">Status</label>
                    <input type="text" class="form-control" id="status" placeholder="Enter Status"
                        name="status" value="<%= typeof status != 'undefined' ? status : '' %>">
                </div>
                <div class="form-group">
                    <label class="required" for="gender">Gender</label>
                    <input type="text" class="form-control" id="gender" placeholder="Enter Gender"
                        name="gender" value="<%= typeof gender != 'undefined' ? gender : '' %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea type="text" class="form-control" rows="5" id="description" placeholder="Enter Description"
                        name="description"><%= typeof description != 'undefined' ? description.trim() : '' %></textarea>
                </div>
                <div class="form-group">
                    <label class="required" for="photo">Photo</label>
                    <input type="file" class="form-control" id="photo" placeholder="Select Photo"
                        name="photo">
                </div>
                <div class="form-group">
                    <label class="required" for="animal_species">Animal Species</label>
                    <input type="text" class="form-control" id="animal_species" placeholder="Enter Animal Species"
                        name="animal_species" value="<%= typeof animal_species != 'undefined' ? animal_species : '' %>">
                </div>
                <div class="form-group">
                    <label class="required" for="_status">Location</label>
                    <input type="text" class="form-control" id="location" placeholder="Enter Latitude and Longitude"
                        name="location" value="<%= typeof location != 'undefined' ? location : '' %>">
                </div>
                
                <button type="submit" class="btn btn-outline-dark pl-4 pr-4">Register</button>
            </form>
        </div>
    </div>
</div>

<% include ../layouts/footer %> 

